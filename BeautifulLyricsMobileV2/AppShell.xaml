<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BeautifulLyricsMobileV2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BeautifulLyricsMobileV2"
    xmlns:pages="clr-namespace:BeautifulLyricsMobileV2.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="BeautifulLyricsMobileV2">

    <ShellContent Title="Loading" ContentTemplate="{DataTemplate pages:LoadingPage}" Route="LoadingPage"/>

