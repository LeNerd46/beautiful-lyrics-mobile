<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>

<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="LyricGroup" TargetType="FlexLayout">
        <Setter Property="Direction" Value="Row"/>
        <Setter Property="Wrap" Value="Wrap"/>
        <Setter Property="JustifyContent" Value="Start"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <!--<Setter Property="MinimumWidthRequest" Value="150"/>-->
        <Setter Property="Margin" Value="15,0"/>
        <Setter Property="IsClippedToBounds" Value="False"/>
    </Style>

    <Style x:Key="LyricGroupOppositeAligned" TargetType="FlexLayout">
        <Setter Property="Direction" Value="Row"/>
        <Setter Property="Wrap" Value="Wrap"/>
        <Setter Property="JustifyContent" Value="End"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="Margin" Value="15,0"/>
        <!--<Setter Property="MinimumWidthRequest" Value="150"/>-->
        <Setter Property="IsClippedToBounds" Value="False"/>
    </Style>

    <Style x:Key="LyricLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontFamily" Value="LyricsMedium"/>
        <Setter Property="LineBreakMode" Value="CharacterWrap"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="Margin" Value="0,0,2.3,0"/>
        <Setter Property="Padding" Value="0,0,1,0"/>
    </Style>

    <Style x:Key="LyricEmphasizedLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontFamily" Value="LyricsMedium"/>
        <Setter Property="LineBreakMode" Value="CharacterWrap"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
    </Style>

    <Style x:Key="BackgroundLyricEmphasizedLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="LyricsMedium"/>
        <Setter Property="LineBreakMode" Value="CharacterWrap"/>
    </Style>

    <Style x:Key="BackgroundLyricLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="LyricsMedium"/>
        <Setter Property="LineBreakMode" Value="CharacterWrap"/>
        <Setter Property="Margin" Value="0,0,2.3,0"/>
        <Setter Property="Padding" Value="0,0,1,0"/>
    </Style>

    <Style x:Key="Interlude" TargetType="HorizontalStackLayout">
        <Setter Property="Margin" Value="10,0"/>
    </Style>

    <Style x:Key="InterludeDot" TargetType="Ellipse">
        <Setter Property="WidthRequest" Value="15"/>
        <Setter Property="HeightRequest" Value="15"/>
        <Setter Property="Fill" Value="White"/>
    </Style>

    <Style x:Key="LineLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontFamily" Value="LyricsMedium"/>
        <Setter Property="LineBreakMode" Value="CharacterWrap"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="Padding" Value="0,0,1,0"/>
    </Style>
</ResourceDictionary>