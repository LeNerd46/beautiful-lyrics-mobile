<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautifulLyricsMobile.Pages.ProfilePage"
             xmlns:touch="clr-namespace:BeautifulLyricsMobile.Controls"
             Title="ProfilePage" Loaded="OnPageLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <touch:TouchScrollView Grid.Row="1" Touch="TouchScrollView_Touch" Release="TouchScrollView_Release">
            <Ellipse  Fill="White" WidthRequest="100" HeightRequest="100" Scale="1.2"/>
        </touch:TouchScrollView>

    </Grid>

</ContentPage>